---
layout: layout.njk
---

<main class="home">
  {% logo "https://www.usbattodo.com/" %}

  <h1>Membership Booklet</h1>

  <form id="login-form" class="logged-out">
    <label>
      <span class="left-label">
        Member Number
        <span class="jp">発行番号</span>
      </span>
      <input name="id" type="number" />
    </label>

    <label>
      <span class="left-label">
        Last Name
        <span class="jp">苗字</span>
      </span>
      <input name="name" type="text" />
    </label>

    <button type="submit" class="large-button login-btn">Log In</button>
  </form>

  <section class="logged-in">
    <span>Go to your <a href="/404.html">member page</a></span>

    <button type="button" class="large-button logout-btn">Log Out</button>
  </section>
</main>
